generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum JobType {
  PARTTIME
  FULLTIME
  CONTRACT
}

enum JobLoc {
  REMOTE
  ONSITE
  HYBRID
}

enum JobCategory {
  FINANCE
  MARKETING
  IT
}

enum Gender {
  MALE
  FEMALE
}

enum Status {
  IDLE
  OPENTOWORK
  HIRING
}

model JobForm {
  id               String         @id @default(uuid())
  fname            String         @db.VarChar(255)
  lname            String         @db.VarChar(255)
  age              Int?
  gender           Gender
  about            String
  resume           String         @default("")
  socialLinks      String[]       @default([])
  createdAt        DateTime       @default(now())
  jobApplicationId String
  jobApplication   JobApplication @relation(fields: [jobApplicationId], references: [id], onDelete: Cascade)
}

model JobApplication {
  id           String      @id @default(uuid())
  title        String      @db.VarChar(255)
  desc         String
  requirements String[]
  salary       Int?
  joblimit     Int?
  jobType      JobType
  jobLoc       JobLoc
  links        String?
  jobCategory  JobCategory
  applied      Int?        @default(0)
  status       Boolean     @default(true)
  createdAt    DateTime    @default(now())
  userId       String
  user         User        @relation(fields: [userId], references: [id])
  jobForm      JobForm[]
}

model Company {
  id     String  @id @default(uuid())
  name   String  @unique @db.VarChar(255)
  desc   String?
  userId String  @unique
  user   User    @relation(fields: [userId], references: [id])
}

model User {
  id          String   @id @default(uuid())
  name        String?  @db.VarChar(255) // maps to fullName
  email       String   @unique
  phone       String?  @unique
  location    String?
  title       String?
  experience  String?
  education   String?
  bio         String?
  skills      String[] // array of skills
  website     String?
  linkedin    String?
  github      String?
  jobType     String[] // array (e.g. ["full-time","part-time"])
  salaryRange String?
  remote      Boolean  @default(false)
  relocate    Boolean  @default(false)
  img         String? // profileImage
  resume      String?
  status      Status   @default(IDLE)
  createdAt   DateTime @default(now())

  jobapplication JobApplication[]
  company        Company?
}
